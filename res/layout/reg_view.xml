                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/reg_edit_name"
                android:layout_alignLeft="@+id/reg_edit_name"
                android:layout_alignTop="@+id/reg_edit_name"
                android:layout_marginRight="15.0sp"
                android:gravity="center_vertical"
                android:paddingLeft="7.0sp"
                android:text="@string/reg_name"
                android:textColor="#ff3f3f3f"
                android:textSize="16.0dip" />
