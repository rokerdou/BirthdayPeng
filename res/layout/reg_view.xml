                android:id="@+id/TextView01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/reg_edit_userid"
                android:layout_alignLeft="@+id/reg_edit_userid"
                android:layout_alignTop="@+id/reg_edit_userid"
