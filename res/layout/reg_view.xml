				android:layout_below="@+id/reg_edit_pwd"
				android:inputType="textPassword" />

			<TextView android:textSize="16.0dip" android:textColor="#ff3f3f3f"
				android:gravity="center_vertical" android:id="@+id/TextView03"
				android:paddingLeft="7.0sp" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/strPswInputLabel"
                android:layout_alignBottom="@+id/reg_edit_confirmpwd"
                android:layout_alignLeft="@+id/reg_edit_confirmpwd"
                android:layout_alignTop="@+id/reg_edit_confirmpwd"/>
			
			
			
			
			<EditText
                android:id="@+id/reg_edit_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg_edit_confirmpwd"
                

                android:paddingLeft="45.0sp"
                android:background="@drawable/edit_login"
                android:hint="@string/strInputnameHint"
              
                android:maxLength="10"
                
                
                android:saveEnabled="true" />
