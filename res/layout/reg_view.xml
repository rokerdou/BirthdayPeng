				android:id="@+id/reg_permission_name" android:paddingLeft="25.0px"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:checked="true" android:button="@drawable/btn_check"
				 android:layout_alignBaseline="@+id/reg_edit_name" 
				    android:layout_alignBottom="@+id/reg_edit_name"
				    android:layout_alignRight="@+id/reg_edit_name"
				         android:layout_alignTop="@+id/reg_edit_name"/>
